<Window x:Class="DecentraWin.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decentra - Login"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/login-background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
            <TextBlock Text="Decentra" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource AccentBlue}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Welcome back!" 
                       FontSize="16" 
                       Foreground="{StaticResource TextGray}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Margin="40,0">

            <TextBlock Text="USERNAME" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextGray}"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,20"/>

            <TextBlock Text="PASSWORD" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextGray}"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,10"/>

            <Button Content="Login" 
                    x:Name="LoginButton"
                    Style="{StaticResource ModernButton}"
                    Margin="0,20,0,10"
                    Height="40"/>

            <!-- Sign Up Section -->
            <Border Background="{StaticResource BackgroundMedium}" 
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Need an account?" 
                               FontSize="14" 
                               Foreground="{StaticResource TextGray}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="INVITE CODE (Optional)" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextGray}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="InviteCodeTextBox"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,10"/>

                    <Button Content="Sign Up" 
                            x:Name="SignUpButton"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource AccentGreen}"
                            Height="40"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock x:Name="StatusTextBlock"
                       Text=""
                       FontSize="12"
                       Foreground="{StaticResource AccentRed}"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
