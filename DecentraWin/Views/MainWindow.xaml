<Window x:Class="DecentraWin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decentra"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server List Sidebar (Left) -->
        <Border Grid.Column="0" Background="{StaticResource SidebarDark}">
            <StackPanel>
                <ListBox x:Name="ServerListBox"
                         ItemsSource="{Binding Servers}"
                         SelectedItem="{Binding SelectedServer}"
                         Style="{StaticResource ModernListBox}"
                         Margin="0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="48" Height="48" 
                                    Background="{StaticResource BackgroundMedium}"
                                    CornerRadius="24"
                                    ToolTip="{Binding Name}">
                                <TextBlock Text="{Binding Name, StringFormat={}{0:C1}}" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Add Server Button -->
                <Button Content="+" 
                        Command="{Binding CreateServerCommand}"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource AccentGreen}"
                        Width="48" Height="48"
                        FontSize="24"
                        Margin="12,10"/>

                <!-- Friends Button -->
                <Button Content="ðŸ‘¥" 
                        Command="{Binding ShowFriendsCommand}"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource AccentBlue}"
                        Width="48" Height="48"
                        FontSize="20"
                        Margin="12,5"/>
            </StackPanel>
        </Border>

        <!-- Channel/Friends List (Middle) -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundMedium}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Server/Context Name -->
                <Border Grid.Row="0" 
                        Background="{StaticResource SidebarDark}"
                        Padding="15,12"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#202225">
                    <TextBlock Text="{Binding SelectedServer.Name, FallbackValue='Decentra'}" 
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Channels List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="TEXT CHANNELS" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextGray}"
                                   Margin="15,15,15,5"/>
                        
                        <ListBox ItemsSource="{Binding Channels}"
                                 SelectedItem="{Binding SelectedChannel}"
                                 Style="{StaticResource ModernListBox}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItem}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChannelType}" Value="voice">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="#" 
                                                   FontSize="16"
                                                   Foreground="{StaticResource TextGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="VOICE CHANNELS" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextGray}"
                                   Margin="15,15,15,5"/>
                        
                        <ListBox ItemsSource="{Binding Channels}"
                                 SelectedItem="{Binding SelectedChannel}"
                                 Style="{StaticResource ModernListBox}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItem}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChannelType}" Value="text">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”Š" 
                                                   FontSize="14"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Chat Area (Right) -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Channel Name Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundDark}"
                    Padding="15,12"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#202225">
                <TextBlock>
                    <Run Text="#" Foreground="{StaticResource TextGray}"/>
                    <Run Text="{Binding SelectedChannel.Name, FallbackValue='general'}"/>
                </TextBlock>
            </Border>

            <!-- Messages Area -->
            <ScrollViewer Grid.Row="1" 
                          x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Background="{StaticResource BackgroundDark}">
                <ItemsControl ItemsSource="{Binding Messages}" Margin="15">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Username}" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBlue}"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextGray}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Content}" 
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Voice Controls (when in voice) -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BackgroundMedium}"
                    Padding="15,10"
                    Visibility="{Binding IsInVoice, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="ðŸ”‡ Mute"
                            Command="{Binding ToggleMuteCommand}"
                            Style="{StaticResource ModernButton}"
                            Margin="5"/>
                    <Button Content="âŒ Leave Voice"
                            Command="{Binding LeaveVoiceCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource AccentRed}"
                            Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Message Input -->
            <Border Grid.Row="3" 
                    Background="{StaticResource BackgroundDark}"
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="MessageInputBox"
                             Grid.Column="0"
                             Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             MinHeight="40"
                             MaxHeight="120"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Send"
                            Command="{Binding SendMessageCommand}"
                            Style="{StaticResource ModernButton}"
                            Margin="10,0,0,0"
                            MinWidth="80"
                            Height="40"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
